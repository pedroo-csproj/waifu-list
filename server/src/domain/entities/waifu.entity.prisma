datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Waifu {
    id String @id @db.VarChar(36)

    name           String    @db.VarChar(40)
    lore           String?   @db.Text()
    image          String?   @db.VarChar(40)
    birthDate      DateTime?
    origin         String    @db.VarChar(40)
    myAnimeListUrl String    @db.VarChar()

    createDate DateTime @default(now())
}
